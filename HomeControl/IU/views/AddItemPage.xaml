<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HomeControl.IU.viewmodels"
             x:Class="HomeControl.IU.views.AddItemPage"
             Title="Adicionar Item">
    <ContentPage.BindingContext>
        <viewmodels:AddItemViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Entry Placeholder="Nome do Item" Text="{Binding NovoItem.Nome}" />
        <Entry Placeholder="Quantidade" Text="{Binding NovoItem.Quantidade}" Keyboard="Numeric" />
        <Entry Placeholder="Validade (dd/MM/yyyy)" Text="{Binding NovoItem.Validade}" />
        <Button Text="Adicionar" Command="{Binding AdicionarItemCommand}" />
    </StackLayout>
</ContentPage>
